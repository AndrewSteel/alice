# ============================================================
# Alice - n8n Environment Variables (Example)
# ============================================================
# Copy this file to .env.n8n and fill in real values.
# NEVER commit .env.n8n to git.
# ============================================================

# ------------------------------------------------------------
# Core services
# ------------------------------------------------------------
HA_URL=http://homeassistant:8123
HA_TOKEN=your-long-lived-access-token

OLLAMA_URL=http://ollama:11434
WEAVIATE_URL=http://weaviate:8080
POSTGRES_CONNECTION=postgresql://user:password@postgres:5432/alice
REDIS_URL=redis://redis:6379
MQTT_URL=mqtt://mosquitto:1883

JWT_SECRET=change-me-use-a-long-random-string

# ------------------------------------------------------------
# PROJ-1: HA Intent Infrastructure (added 2026-02-24)
# These are read in n8n workflows via $env.VARIABLE_NAME
# ------------------------------------------------------------

# Minimum Weaviate cosine similarity score to accept an intent match (0.0-1.0)
INTENT_MIN_CERTAINTY=0.82

# How many candidate intents to retrieve per nearText query
INTENT_MAX_RESULTS=3

# Ollama model used by the chat handler (PROJ-3)
OLLAMA_MODEL=qwen3:14b
